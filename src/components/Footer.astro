---
// src/components/Footer.astro
const currentYear = 2026;

const navLinks = [
  { name: 'Inicio', href: '/' },
  { name: 'Servicios', href: '/services' },
  { name: 'Planes', href: '/plans' },
  { name: 'Tecnología', href: '/technologies' },
  { name: 'Contacto', href: '/contact' },
];

const socialLinks = [
  { name: 'Instagram', href: 'https://instagram.com/mariosagency', icon: 'instagram' },
  { name: 'Linkedin', href: 'https://linkedin.com/company/mariosagency', icon: 'linkedin' },
  { name: 'Twitter', href: 'https://twitter.com/mariosagency', icon: 'twitter' },
];

// JSON-LD: El cerebro de tu marca para motores de IA
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Mario's Agency",
  "url": "https://mariosagency.com",
  "logo": "https://mariosagency.com/logo.png",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+54-11-4023-0671",
    "contactType": "customer service",
    "areaServed": "AR",
    "availableLanguage": "Spanish"
  },
  "sameAs": socialLinks.map(link => link.href)
};
---


---
const currentYear = 2026;
import { Image } from "astro:assets";
import Logo from '../../public/Icon.webp'

const navLinks = [
  { name: 'Inicio', href: '/' },
  { name: 'Servicios', href: '/services' },
  { name: 'Planes', href: '/plans' },
  { name: 'Tecnología', href: '/technologies' },
  { name: 'Contacto', href: '/contact' },
];

const socialLinks = [
  { name: 'Instagram', href: 'https://instagram.com/mariosagency', icon: 'instagram' },
  { name: 'Linkedin', href: 'https://linkedin.com/company/mariosagency', icon: 'linkedin' },
  { name: 'Twitter', href: 'https://twitter.com/mariosagency', icon: 'twitter' },
];

// JSON-LD: El cerebro de tu marca para motores de IA
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Mario's Agency",
  "url": "https://mariosagency.com",
  "logo": "https://mariosagency.com/logo.png",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+54-11-4023-0671",
    "contactType": "customer service",
    "areaServed": "AR",
    "availableLanguage": "Spanish"
  },
  "sameAs": socialLinks.map(link => link.href)
};
---

<footer class="relative border-t border-white/5 bg-black/50 backdrop-blur-xl z-[500] tracking-tight">
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  
  <div class="absolute inset-0 pointer-events-none bg-[radial-gradient(circle_at_center,_rgba(34,197,94,0.05)_0%,_transparent_70%)] opacity-30" aria-hidden="true"></div>

  <div class="container relative z-10 mx-auto px-6 py-16">
    <div class="grid gap-12 md:grid-cols-4">
      
      <div class="md:col-span-2">
        <a href="/" class="inline-flex items-center gap-3 mb-6 group" aria-label="Mario's Agency - Volver al inicio">
          <Image src={Logo} alt={"Logo de Mario's Agency"} class={'w-6'}/>
          <span class="text-xl font-bold text-white font-zalando">
            Mario's<span class="bg-gradient-to-r from-cyan-400 to-purple-500 bg-clip-text text-transparent">Agency</span>
          </span>
        </a>
        <p class="text-sm text-white/60 max-w-md mb-6 leading-relaxed font-zalando">
          Ingeniería digital de alto rendimiento. Transformamos negocios en activos de facturación.
        </p>
        

      </div>

      <nav aria-labelledby="footer-nav-title">
        <h4 id="footer-nav-title" class="font-bold text-white mb-6 uppercase tracking-widest text-xs font-zalando">Navegación</h4>
        <ul class="space-y-3 list-none p-0">
          {navLinks.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-white/50 transition-all duration-300 hover:text-cyan-400 hover:translate-x-1 inline-block text-sm font-zalando"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <div aria-labelledby="footer-contact-title">
        <h4 id="footer-contact-title" class="font-bold text-white mb-6 uppercase tracking-widest text-xs font-zalando">Ubicación y Contacto</h4>
        <address class="not-italic space-y-4 text-white/50 font-zalando">
          <div class="flex flex-col gap-1">
            <span class="text-[10px] text-gray-500 uppercase font-bold tracking-tighter">Email Directo</span>
            <a href="mailto:hola@mariosagency.com" class="text-sm hover:text-white transition-colors">ginociancia10@gmail.com</a>
          </div>
          <div class="flex flex-col gap-1">
            <span class="text-[10px] text-gray-500 uppercase font-bold tracking-tighter">WhatsApp Soporte</span>
            <a href="tel:+541140230671" class="text-sm hover:text-white transition-colors">+54 (11) 4023 0671</a>
          </div>
          <div class="flex flex-col gap-1">
            <span class="text-[10px] text-gray-500 uppercase font-bold tracking-tighter">Somos de:</span>
            <span class="text-sm">Buenos Aires, Argentina</span>
          </div>
        </address>
      </div>
    </div>

    <div class="mt-16 flex flex-col items-center justify-between gap-4 border-t border-white/5 pt-8 md:flex-row font-zalando">
      <p class="text-xs text-white/30">
        © {currentYear} Mario's Agency. La ingeniería digital que impulsa tu negocio.
      </p>
      <nav class="flex gap-6 text-xs" aria-label="Legal">
        <a href="/privacy" class="text-white/30 hover:text-cyan-400 transition-colors">Política de Privacidad</a>
        <a href="/terms" class="text-white/30 hover:text-cyan-400 transition-colors">Términos de Servicio</a>
      </nav>
    </div>
  </div>
</footer>

<style>
  .text-gradient {
    background: linear-gradient(to r, #00ffff, #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }
</style>
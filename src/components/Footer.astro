      </div>

      <nav aria-labelledby="footer-nav-title">
        <h4 id="footer-nav-title" class="font-bold text-white mb-6 uppercase tracking-widest text-xs font-zalando">Navegación</h4>
        <ul class="space-y-3 list-none p-0">
          {navLinks.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-white/50 transition-all duration-300 hover:text-cyan-400 hover:translate-x-1 inline-block text-sm font-zalando"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <div aria-labelledby="footer-contact-title">
        <h4 id="footer-contact-title" class="font-bold text-white mb-6 uppercase tracking-widest text-xs font-zalando">Ubicación y Contacto</h4>
        <address class="not-italic space-y-4 text-white/50 font-zalando">

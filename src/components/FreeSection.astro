---
import WhatsApp from "./Icons/WhatsApp.astro";

const totalSlots = 20;
const slotsClaimed = 15; 
const remainingSlots = totalSlots - slotsClaimed;

const whatsappNumber = "5491140230671"; 
const message = encodeURIComponent("Hola, vengo desde la web. Me interesa aplicar a uno de los cupos de ingeniería digital costo $0.");
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${message}`;

const consultants = [
  { initial: "MA", gradient: "from-blue-500 to-cyan-400" },
  { initial: "JD", gradient: "from-purple-500 to-pink-500" },
  { initial: "SL", gradient: "from-amber-400 to-orange-500" }
];
---

<section id="wa-conversion" class=" relative w-full md:bg-[url(../assets/bg-green.svg)] bg-no-repeat bg-cover bg-center bg-fixed z-40 mx-auto px-4 py-16 md:py-32">
  <div class="relative max-w-5xl mx-auto">   
    <div class="relative overflow-hidden rounded-[1.5rem] md:rounded-[2rem] border border-white/5 bg-gradient-to-b from-[#080808] to-black p-[1px] md:p-[2px]">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent md:via-[#25D366]/10 via-[#eaeaea]/20 to-transparent animate-border-flow-fast z-30"></div>
      <div class="relative 
        bg-[url(../assets/bg-green-mb.svg)] 
        md:bg-none 
        md:bg-[#050505] 
        bg-cover 
        rounded-[1.4rem] md:rounded-[1.9rem] 
        p-6 md:p-12 lg:p-16 
        overflow-hidden">
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-12 items-center relative z-10">
          
          <div class="text-center lg:text-left order-1 lg:order-1">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-md md:bg-[#25D366]/5 bg-[#1f2120] border border-[#25D366]/10 text-[#25D366] text-[10px] font-bold uppercase tracking-[0.3em] mb-4 md:mb-6">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#25D366] opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-[#25D366]"></span>
              </span>
              Disponibilidad Inmediata
            </div>
            
            <h2 class="text-3xl md:text-5xl font-black text-white mb-4 md:mb-6 leading-[1.15] md:leading-[1.1]">
              Tu infraestructura <br class="hidden md:block"/>
              <span class="text-[#25D366] drop-shadow-[0_0_15px_rgba(37,211,102,0.3)]">lista para operar.</span>
            </h2>
            
            <p class="md:text-gray-400  text-gray-200 text-base md:text-lg mb-6 md:mb-8 max-w-md mx-auto lg:mx-0">
              Eliminamos la burocracia. Accedé al <a href="/plans?impulse" target="_blank" class="underline font-bold">Plan IMPULSE</a> mediante una auditoría directa. Totalmente <strong class="text-green-600 text-[25px] md:text-base block md:inline">GRATIS</strong>
            </p>

            <div class="flex flex-wrap justify-center lg:justify-start items-center gap-4 text-[10px] md:text-xs font-mono md:text-gray-500 text-gray-300">
              <span class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full md:bg-gray-800 bg-gray-400 animate-pulse"></span>
                Protocolo: WA-SECURE
              </span>
              <span class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full md:bg-gray-800 bg-gray-400 animate-pulse"></span>
                Encriptación E2E
              </span>
            </div>
          </div>

          <div class="flex flex-col items-center order-2 lg:order-2">
            <div class="relative w-full max-w-sm">
              
              <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full pointer-events-none">
                <div class="absolute inset-0 rounded-full border border-[#25D366]/20 animate-radar-1"></div>
                <div class="absolute inset-0 rounded-full border border-[#25D366]/10 animate-radar-2"></div>
              </div>

              <div class="relative bg-white/[0.03] border border-white/10 backdrop-blur-md rounded-2xl md:rounded-3xl p-6 md:p-8 text-center">
                <div class="mb-6">
                  <div class="md:text-gray-500  text-gray-200 text-[10px] uppercase tracking-widest mb-1">Estado de los Cupos</div>
                  
                  <div class="flex items-baseline justify-center gap-2 text-white">
                    <span class="text-5xl md:text-6xl font-black leading-none">{remainingSlots}</span>
                    <span class="md:text-gray-500  text-gray-200 text-lg md:text-xl font-medium">disponibles</span>
                  </div>

                  <div class="w-full bg-white/5 h-2 rounded-full mt-4 overflow-hidden p-[1px]">
                    <div class="bg-gradient-to-r from-[#25D366]/50 to-[#25D366] h-full rounded-full transition-all duration-1000" style={`width: ${(slotsClaimed / totalSlots) * 100}%`}></div>
                  </div>
                  
                  <div class="flex justify-between mt-2 text-[9px] uppercase tracking-tighter font-bold">
                    <span class="md:text-[#25D366] text-gray-200">{slotsClaimed} CUBIERTOS</span>
                    <span class="md:text-gray-600 text-gray-200">{totalSlots} TOTALES</span>
                  </div>
                </div>

                <a 
                  href={whatsappUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group relative flex items-center justify-center gap-3 w-full py-4 md:py-5 bg-green-600 text-white font-black rounded-xl hover:scale-[1.03] active:scale-95 transition-all duration-300 shadow-[0_0_30px_rgba(37,211,102,0.2)]"
                >
                  <div class="block "><WhatsApp /></div>
                  <span class="text-xs md:text-base">SOLICITAR VÍA WHATSAPP</span>
                </a>

                <p class="mt-4 text-[10px] md:text-[11px] md:text-gray-500 text-gray-200 font-medium tracking-tight flex items-center justify-center gap-1">
                  <span class="text-[#25D366] animate-pulse">●</span> Redirección segura a chat directo.
                </p>
              </div>

              <div class="mt-6 flex flex-col items-center gap-3">
                <div class="flex -space-x-3">
                  {consultants.map(c => (
                    <div class={`w-7 h-7 md:w-8 md:h-8 rounded-full md:border-2 border-1 md:border-[#050505] border-gray-100 bg-gradient-to-br ${c.gradient} flex items-center justify-center text-[9px] md:text-[10px] font-bold text-white`}>
                      {c.initial}
                    </div>
                  ))}
                </div>
                <span class="text-[9px] md:text-[10px] md:text-gray-500 text-gray-200 uppercase font-bold tracking-[0.2em]">3 personas consultando ahora</span>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes border-flow-fast {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
  .animate-border-flow-fast {
    animation: border-flow-fast 4s linear infinite;
  }

  @keyframes radar {
    0% { transform: scale(1); opacity: 0.5; }
    100% { transform: scale(1.4); opacity: 0; }
  }
  .animate-radar-1 {
    animation: radar 2.5s ease-out infinite;
  }
  .animate-radar-2 {
    animation: radar 2.5s ease-out 1.25s infinite;
  }
</style>



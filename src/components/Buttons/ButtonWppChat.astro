<style>
    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @keyframes slideDown {
        from {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
        to {
            opacity: 0;
            transform: translateY(20px) scale(0.95);
        }
    }

    .animate-slideUp {
        animation: slideUp 0.3s ease-out forwards;
    }

    .animate-slideDown {
        animation: slideDown 0.3s ease-out forwards;
    }

    @keyframes fadeOut {
        from {
            opacity: 1;
            transform: scale(1);
        }
        to {
            opacity: 0;
            transform: scale(0.5);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.5);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .badge-hide {
        animation: fadeOut 0.3s ease-out forwards;
    }

    .badge-show {
        animation: fadeIn 0.3s ease-out forwards;
    }
</style>

<script>
    const button = document.getElementById('whatsapp-button');
    const bubble = document.getElementById('whatsapp-bubble');
    const closeBtn = document.getElementById('close-bubble');
    const badge = document.getElementById('notification-badge');
    let isOpen = false;
    let autoOpenTimer: number | null = null;

    function hideBadge() {
        if (badge) {
            badge.classList.remove('badge-show');
            badge.classList.add('badge-hide');
            setTimeout(() => {
                badge.style.display = 'none';
            }, 300);
        }
    }

    function showBadge() {
        if (badge) {
            badge.style.display = 'flex';
            badge.classList.remove('badge-hide');
            badge.classList.add('badge-show');
        }
    }

    function toggleBubble(forceClose = false) {
        if (forceClose || isOpen) {
            bubble?.classList.remove('animate-slideUp');
            bubble?.classList.add('animate-slideDown');
            setTimeout(() => {
                bubble?.classList.add('hidden');
                bubble?.classList.remove('animate-slideDown');
            }, 300);
            isOpen = false;
            showBadge();
        } else {
            bubble?.classList.remove('hidden');
            setTimeout(() => {
                bubble?.classList.add('animate-slideUp');
            }, 10);
            isOpen = true;
            hideBadge();
        }
    }

    button?.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleBubble();
        if (autoOpenTimer) {
            clearTimeout(autoOpenTimer);
            autoOpenTimer = null;
        }
    });

    closeBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleBubble(true);
    });

    // Cerrar al hacer click fuera
    document.addEventListener('click', (e) => {
        const widget = document.getElementById('whatsapp-widget');
        if (isOpen && widget && !widget.contains(e.target as Node)) {
            toggleBubble(true);
        }
    });

    // Cerrar con tecla ESC
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && isOpen) {
            toggleBubble(true);
        }
    });


---
// Layout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';

import HeroSceneCanvas from '../components/Scene/HeroSceneCanvas.astro';
import Footer from '../components/Footer.astro';
import ButtonWppChat from '../components/Buttons/ButtonWppChat.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Tu Máquina de Ventas | Ingeniería Digital',
  description = 'SEO técnico, IA y desarrollo de alto rendimiento.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bree+Serif&family=Zalando+Sans+Expanded:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-[#020205] text-white overflow-x-hidden antialiased relative tracking-tight font-zalando ">
    <ButtonWppChat/>
    <HeroSceneCanvas/>
    <Header />
      <slot />
    <Footer/> 
  </body>
</html>